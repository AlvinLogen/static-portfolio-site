{
  "name": "portfolio-website",
  "version": "1.0.0",
  "description": "Portfolio website with CI/CD",
  "main": "src/index.html",
  "scripts": {
    "start": "http-server src -p 3000 -c-1",
    "build": "npm run build:css && npm run build:js && npm run build:html",
    "build:css": "postcss src/styles.css -o dist/styles.min.css --config postcss.config.js",
    "build:js": "terser src/script.js -o dist/script.min.js --compress --mangle",
    "build:html": "html-minifier --input-dir src --output-dir dist --file-ext html --collapse-whitespace --remove-comments",
    "serve": "http-server dist -p 3000 -c-1",
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:js\" \"npm run start\"",
    "watch:css": "postcss src/styles.css -o src/styles.compiled.css --watch --config postcss.config.js",
    "watch:js": "chokidar 'src/**/*.js' -c 'npm run lint:js'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint src/**/*.js --fix",
    "lint:css": "stylelint src/**/*.css --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "validate": "npm run lint && npm run test",
    "pre-commit": "lint-staged",
    "audit:security": "npm audit --audit-level moderate",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./reports/lighthouse.html",
    "performance": "npm run build && npm run serve & sleep 5 && npm run lighthouse",
    "clean": "rimraf dist coverage test-results",
    "deploy:staging": "echo 'Deploying to staging...'",
    "deploy:prod": "echo 'Deploying to production...'"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/script.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlvinLogen/static-portfolio-site.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/AlvinLogen/static-portfolio-site/issues"
  },
  "homepage": "https://github.com/AlvinLogen/static-portfolio-site#readme",
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "eslint": "^9.36.0",
    "jest": "^29.7.0",
    "jsdom": "^27.0.0",
    "jsdon": "^0.2.3",
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.40.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.0",
    "eslint-plugin-jsdoc": "^46.9.0",
    "eslint-plugin-security": "^1.7.1",
    "html-minifier-cli": "^0.1.0",
    "http-server": "^14.1.1",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "stylelint": "^16.0.2",
    "terser": "^5.26.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.html": [
      "prettier --write"
    ]
  }
}